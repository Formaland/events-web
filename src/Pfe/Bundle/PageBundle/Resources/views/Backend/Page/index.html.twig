{% extends 'PfeWebBundle:Backend:layout.html.twig' %}

{% block title_head -%}
    List Page
{% endblock %}

{% block title_page -%}
    <i class="fa fa-copy"></i> List Page
{% endblock %}

{% block content -%}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                                            <div class="pull-right">
                            <a href="{{ path('pfe_page_new') }}" class="btn btn-success"><span class="fa fa-plus"></span> &MediumSpace; Add Page</a>
                        </div>
                                        <h3 class="panel-title">List Page</h3>
                    <p></p>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table" id="table1">
                            <thead>
                            <tr>
                                        <th>Title</th>
                                        <th>Createdat</th>
                                        <th>Updatedat</th>
                                        <th>Template</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for entity in entities %}
                            <tr>
                                        <td>{{ entity.title }}</td>
                                        <td>{{ entity.createdAt|date('d/m/Y H:i:s') }}</td>
                                        <td>{{ entity.updatedAt|date('d/m/Y H:i:s') }}</td>
                                        <td>
                                            {% if(entity.template == 0) %}
                                                {{ 'Acceuil' }}
                                            {% elseif(entity.template == 1) %}
                                                {{ 'Contact' }}
                                            {% endif %}
                                        </td>
                                        <td>    <a href="{{ path('pfe_page_show', { 'token': entity.token }) }}">
                <i class="fa fa-info"></i>
            </a>    <a href="{{ path('pfe_page_edit', { 'token': entity.token }) }}">
                <i class="fa fa-pencil"></i>
            </a>                                        </td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
